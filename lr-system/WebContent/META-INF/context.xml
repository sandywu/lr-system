<Context>
  <Resource
     name="jdbc/TerasolunaSampleDataSource"
     type="javax.sql.DataSource"
     driverClassName="com.mysql.jdbc.Driver"
     username="root"
     password="root"
     url="jdbc:mysql://localhost:3306/lr?characterEncoding=UTF-8"
     useUnicode="true"
     characterEncoding="UTF-8"
     maxIdle="2"
     maxWait="5000"
     maxActive="4"/>
</Context>
